{
    "configurations": [
        {
            "name": "Server",
            "type": "coreclr",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "program": "dotnet",
            "args": [
                "watch",
                "--project",
                "CoEditor",
                "--launch-profile",
                "dev",
                "--verbose" // Let's us confirm browser connects with hot reload capabilities
            ],
            "preLaunchTask": "build" // Ensure we don't watch an unbuilt site
        },
        {
            "name": "Client",
            "type": "blazorwasm",
            "request": "attach",
            "cwd": "${workspaceFolder}",
            "url": "http://localhost:5199",  // Tell launch where to find site
            "timeout": 120000, // Allows time for the site to launch
        }
    ],
    "compounds": [
        {
            "name": "Debug with Frontend",
            "configurations": [ "Server", "Client" ]
        }
    ]
}